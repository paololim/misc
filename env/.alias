alias ls='ls -F'
alias la='ls -al'
alias rm='rm -i'

if [ `uname` != 'Linux' ]; then
  alias emacs='/Applications/Emacs.app/Contents/MacOS/Emacs -fg white -bg black'
fi

#alias rubydir='cd /opt/local/lib/ruby/gems/1.8/gems'
